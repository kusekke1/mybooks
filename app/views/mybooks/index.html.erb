<p id="notice"><%= notice %></p>

<h1>Listing Mybooks</h1>

<table>
  <thead>
    <tr>
      <th>Book name</th>
      <th>Author</th>
      <th>Price</th>
      <th>Publisher</th>
      <th>Release</th>
      <th>Image</th>
      <th>Image_2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mybooks.each do |mybook| %>
      <tr>
        <td><%= mybook.book_name %></td>
        <td><%= mybook.author %></td>
        <td><%= mybook.price %></td>
        <td><%= mybook.publisher %></td>
        <td><%= mybook.release %></td>
        <td><img src="<%= mybook.book_img %>" class="book-image"></td>
        <td><%= image_tag("#{mybook.book_img}", :class => "book-image") %></td>
        <td><%= link_to 'Show', mybook %></td>
        <td><%= link_to 'Edit', edit_mybook_path(mybook) %></td>
        <td><%= link_to 'Destroy', mybook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

